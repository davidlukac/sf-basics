{% extends '::base1.html.twig' %}


{% block body %}


    <div class="container">

        <h1>This is going to be translated soon!</h1>

        <em>
            {#<p>Blog ID: {{ id }}.</p>#}
            <p>Extras: {{ extra }}.</p>
            <p>Your browser: {{ browser }}.</p>
        </em>

        {% autoescape false %}
            <div></div>
        {% endautoescape %}
        <div class="row">
            {#{% for article in articles %}#}
            <div class="col-md-4">
                <h2>{{ article.title }}</h2>
                {#<p>{{ article.snippet | raw }}</p>#}
                <p>{{ article.content | capitalize | reverse }}</p>
                <p>{{ spanify(article.content) | raw }}</p>
                <p>{{ article.content | first_word | upper }}</p>

                <ul>
                    {% for word in splitter(article.content) %}
                        <li>Word: {{ word }}</li>
                    {% endfor %}
                </ul>

                {% set list = [ 'a', 'b', 'c' ] %}
                {{ list|join(':') }}
                {% if 'd' in [ 'a', 'b', 'c' ] %}
                    {{ 'Found A' }}
                {% endif %}
            </div>
            {#{% endfor %}#}
        </div>

    </div>

{% endblock %}

